@page
@model XiippySDKBridgeSampleAspNetApp.Pages.GetPaymentStatusModel
@{
    ViewData["Title"] = "Get Payment Status";

}

<h2>Get Payment Status Form</h2>

<form method="post" class="needs-validation">
    <div class="mb-3">
        <label asp-for="StatementID" class="form-label">Statement ID</label>
        <input asp-for="StatementID" class="form-control" />
        <span asp-validation-for="StatementID" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="StatementTimeStamp" class="form-label">Statement TimeStamp</label>
        <input asp-for="StatementTimeStamp" class="form-control" />
        <span asp-validation-for="StatementTimeStamp" class="text-danger"></span>
    </div>
   

    <button type="submit" class="btn btn-primary">Submit</button>
</form>

@if (Model.SuccessMessage != null)
{
    <div class="mt-3 alert alert-success">
        <h5>Success</h5>
        <p>@Model.SuccessMessage</p>
    </div>
}
@if (Model.ErrorMessage != null)
{
    <div class="mt-3 alert alert-danger">
        <h5>Error</h5>
        <p>@Model.ErrorMessage</p>
    </div>
}
